            <Button x:Name="toCancle" Content="ביטול" BorderBrush="Gray" BorderThickness="2" Background="WhiteSmoke" HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Center" Grid.Row="6" Width="102" Height="25" Margin="0" Click="toCancle_Click"/>
        </Grid>

    </Grid>
</Window>
