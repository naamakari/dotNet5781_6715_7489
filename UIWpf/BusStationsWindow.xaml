        <Button x:Name="backToNenu" Content="חזרה לתפריט הראשי" Click="backToNenu_Click" BorderBrush="Gray" BorderThickness="2" Background="WhiteSmoke" HorizontalAlignment="Left" Margin="531,364,0,0" VerticalAlignment="Top" Width="132" Height="32"  RenderTransformOrigin="0.634,0.784"/>
