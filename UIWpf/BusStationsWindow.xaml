            <Label Content=":קו אורך" Grid.Column="1" HorizontalAlignment="Left" Margin="2.8,6.6,0,22" Grid.Row="3" VerticalAlignment="Center" Height="25" Width="52"/>
            <TextBox x:Name="longitudeTextBox" Grid.Column="0" HorizontalAlignment="Right" Height="23" Margin="0,9.6,3.2,21" Grid.Row="3" Text="{Binding Longitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" KeyDown="latitudeTextBox_KeyDown" TextChanged="longitudeTextBox_TextChanged" />
