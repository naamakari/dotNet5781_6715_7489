            <TextBox x:Name="latitudeTextBox" Grid.Column="0" HorizontalAlignment="Right" Height="23" Margin="0,9.2,3.2,19" Grid.Row="4" Text="{Binding Latitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" KeyDown="latitudeTextBox_KeyDown" TextChanged="latitudeTextBox_TextChanged"/>
