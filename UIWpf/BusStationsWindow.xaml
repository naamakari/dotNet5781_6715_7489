            <Label Content="קוד תחנה" Grid.Column="1" HorizontalAlignment="Left" Margin="2.8,5,0,12.4" Grid.Row="0" VerticalAlignment="Center" Height="25" Width="60"/>
            <Label x:Name="stationCodeLabel" Content="מספר מזהה יינתן על ידי המערכת" Grid.Column="0" HorizontalAlignment="Left" Margin="3,5,0,12.4" Grid.Row="0" VerticalAlignment="Center" Height="25" Width="179"/>
            <Label Content=":שם תחנה" Grid.Column="1" HorizontalAlignment="Left" Margin="2.8,5.6,0,10.8" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="64"/>
            <TextBox x:Name="stationNameTextBox" Grid.Column="0" HorizontalAlignment="Right" Height="23" Margin="0,7.6,3.2,11.8" Grid.Row="1" Text="{Binding StationName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" TextChanged="stationNameTextBox_TextChanged"/>
            <Button x:Name="toAdd" Content="הוספה" BorderBrush="Gray" BorderThickness="2" Background="WhiteSmoke" Click="toAdd_Click" IsEnabled="False" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="5" Height="30" Margin="79,5,7.2,7.4"/>
        </Grid>
