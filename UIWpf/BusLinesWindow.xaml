            <Label Content=":מזהה הקו" FontSize="16" FontWeight="SemiBold" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,9,-99,2.8" VerticalAlignment="Center" Height="37" Width="101" Grid.Row="2"/>
