            </Grid.RowDefinitions>
            <Label Content=":אזור פעילות" FontSize="16" FontWeight="SemiBold" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,0,-85,5.6" VerticalAlignment="Bottom" Height="39" Width="101" Grid.Row="3"/>
