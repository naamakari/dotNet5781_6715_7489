                <ColumnDefinition Width="Auto" MinWidth="204.8"/>
                <ColumnDefinition Width="Auto" MinWidth="176"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40.8"/>
                <RowDefinition Height="29.6"/>
                <RowDefinition Height="48.4"/>
                <RowDefinition Height="48.4"/>
