            <Label Content=":מספר הקו" Grid.Column="1" FontWeight="SemiBold" FontSize="16" HorizontalAlignment="Right"  Margin="0,47,4,82" VerticalAlignment="Center" Height="39" Width="88" Grid.RowSpan="2"/>
