            <Label Content=":מספר הקו" FontSize="16" FontWeight="SemiBold" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,38,-95,43.6" Grid.Row="0" VerticalAlignment="Center" Height="40" Width="101" Grid.RowSpan="3"/>
