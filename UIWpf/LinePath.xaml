<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIWpf"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="UIWpf.LinePath"
        mc:Ignorable="d"
        Title="LinePath" Height="450" Width="720">

    <Grid x:Name="mainGrid">
        <Label Content="?לאן תרצה/י להגיע" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="243,10,0,0" VerticalAlignment="Top" Width="186"/>

        <Grid x:Name="insertDetailsGrid" >
            <Label Content=":אני נמצא/ת ב" HorizontalAlignment="Left" Margin="608,49,0,0" VerticalAlignment="Top" Width="96" RenderTransformOrigin="3.935,0.764"/>

            <ListBox x:Name="firstStationListBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="100" Margin="370,49,0,0" VerticalAlignment="Top" Width="233">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding StationName}" TextAlignment="Right"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Label Content=":רוצה להגיע ל" HorizontalAlignment="Left" Margin="266,49,0,0" VerticalAlignment="Top" Width="96"/>
            <ListBox x:Name="LastStationListBox" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="100" Margin="27,49,0,0" VerticalAlignment="Top" Width="234">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding StationName}" TextAlignment="Right"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <DataGrid x:Name="busLineBLDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="27,178,31.6,111" RowDetailsVisibilityMode="VisibleWhenSelected">
                <DataGrid.Columns>
                    <DataGridTemplateColumn x:Name="busNumLineColumn" Header="Bus Num Line" Width="SizeToHeader">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding BusNumLine}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn x:Name="lastStationColumn" Header="Last Station" Width="SizeToHeader">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LastStation.StationName}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="LookAtTimeOfLines" Content="לצפייה בזמני&#xA;      הגעת&#xA; האוטובוסים" HorizontalAlignment="Left" Margin="150,327,0,0" VerticalAlignment="Top" Width="78" Height="62" Click="LookAtTimeOfLines_Click"/>
            <TextBlock x:Name="timer" HorizontalAlignment="Left" Margin="27,347,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
            <Button x:Name="StopWatch" Content="סיים חיפוש" HorizontalAlignment="Left" Margin="287,344,0,0" VerticalAlignment="Top" Width="75" Height="45" Click="StopWatch_Click"/>
            <Button x:Name="searchLines" Content="חפש קווים" HorizontalAlignment="Left" Margin="277,134,0,0" VerticalAlignment="Top" Width="75" Click="searchLines_Click"/>

        </Grid>
    </Grid>
</Window>
